<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") -%> 
   
    <link href="./css/partials/headertmp.css" rel="stylesheet">
    <link href="./css/partials/footer.css" rel="stylesheet">

    <link href="./css/partials/dropdown.css" rel="stylesheet">
    <link href="./css/partials/card.css" rel="stylesheet">
    <link href="./css/partials/layout.css" rel="stylesheet">

    <link href="./css/setting.css" rel="stylesheet">

    <title>Document</title>
</head>
<body>
    <div class="main-container">        <!-- Load thư viện vào tập tin  -->
        <%- include("./partials/headertmp") -%> 
        <div class="container-change-element">
            <div class="header">    
                <p>Cài đặt tài khoản</p>
            </div>
            <div class="change-area">
                <div class="item-change">
                    <div class="left">
                        <p class="name">Email</p>
                        <p class="value-name" id="value-name">cococook@gmail.com</p> 
                    </div>
                    <div class="right">
                        <button id = "btn-change-email">Thay đổi</button>
                    </div>
                </div>
                <div class="change-area-open" id = "change-email">
                    <div class="input-container">
                        <input type="text" required=""/>
                        <label>Địa chỉ Email mới</label>        
                    </div>
                    <div class="input-container">
                        <input type="password" required=""/>
                        <label>Xác nhận mật khẩu</label>        
                    </div>

                    <div class="recommend-btn">
                        <button class="btn-recommend color-3" style="margin-top: 1em;" onclick="window.location.href='/myrecipe'">Đổi</button>
                    </div>
                </div>
                <div class="item-change">
                    <div class="left">
                        <p class="name">Password</p>
                        <p class="value-name" id="value-name">Mật khẩu tối thiểu có 6 kí tự</p> 
                    </div>
                    <div class="right">
                        <button id = "btn-change-password">Thay đổi</button>
                    </div>
                </div>
                <div class="change-area-open" id = "change-password">
                    <div class="input-container">
                        <input type="password" required=""/>
                        <label>Nhập mật khẩu</label>        
                    </div>
                    <div class="input-container">
                        <input type="password" required=""/>
                        <label>Xác nhận mật khẩu</label>        
                    </div>

                    <div class="recommend-btn">
                        <button class="btn-recommend color-3" style="margin-top: 1em;" onclick="window.location.href='/myrecipe'">Đổi</button>
                    </div>
                </div>
                <hr>
                <button class="delete-account"><img src ="./images/delete-red.jpg"><p>Xoá tài khoản</p></button>
            </div>
        </div>


        
    </div>

    <footer>
        <%- include("./partials/footer") -%> 
    </footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src='./js/setting.js'></script>
    <script src='./js/home.js'></script>
    <script src='./js/header.js'></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
</body>
</html>

